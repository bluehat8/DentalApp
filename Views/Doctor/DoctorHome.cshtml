    <script>
        // Script para manejar el clic en elementos con la clase 'delete'
        $(document).on('click', '.delete', function () {
            var tratamientoId = $(this).data('id');
            $('#deleteTratamientoId').val(tratamientoId);
        });

        // Script para manejar el envío del formulario 'agregarTratamiento'
        $(document).on('submit', '#agregarTratamiento', function (e) {
            e.preventDefault();

            var formData = new FormData($(this)[0]);

            $.ajax({
                type: "POST",
                url: "/Doctor/AgregarTratamiento",
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    // Limpia los campos del formulario
                    // Actualiza la tabla u otro contenido con la respuesta
                    $('#pnl-table-tratamiento').html(response);
                    $('#cancelarRegistro').trigger('click');
                    $("#agregarTratamiento")[0].reset();
                },
                error: function (error) {
                    console.error(error);
                }
            });
        });

        // Script para manejar el envío del formulario 'eliminarTratamiento'
        $(document).on('submit', '#eliminarTratamiento', function (event) {
            event.preventDefault();

            var formData = new FormData();
            var tratamientoId = $("#deleteTratamientoId").val();

            formData.append('idtratamiento', tratamientoId);

            $.ajax({
                url: '/Doctor/EliminarTratamiento',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (data) {
                    console.log('Tratamiento eliminado con éxito');
                    location.reload();
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    console.log(textStatus, errorThrown);
                }
            });
        });

        // Script para manejar el clic en el botón "Filtrar"
        $(document).on('click', '#filterTreatmentButton', function () {
            var searchTerm = $("#searchTreatmentInput").val();

            // Realiza la solicitud AJAX para filtrar por nombre
            $.ajax({
                type: "GET",
                url: `/Doctor/FiltrarTratamientoPorNombre?filtro=${encodeURIComponent(searchTerm)}`,
                contentType: "application/json",
                success: function (data) {
                    // Manipula la respuesta según tus necesidades
                    console.log("Tratamientos filtrados");
                    // Actualiza la tabla u otro contenido con los resultados
                    $('#pnl-table-tratamiento').html(data);
                },
                error: function (error) {
                    console.error("Error al filtrar tratamientos:", error);
                }
            });
        });
    </script>


