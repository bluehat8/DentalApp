                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Tabla de tratamientos -->
                    <div id="pnl-table-tratamiento"> 
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Descripción</th>
                                <th>Duración</th>
                                <th>Restricciones</th>
                                <th>Precio</th>
                                <th>Imagen</th>
                                <th>Acciones</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var tratamiento in Model.Tratamientos)
                            {
                                <tr>
                                    
                                    <td>@tratamiento.Nombre</td>
                                    <td>@tratamiento.Descripcion</td>
                                    <td>@tratamiento.Duracion</td>
                                    <td>@tratamiento.Restricciones</td>
                                    <td>@tratamiento.Precio</td>
                                    <td>@tratamiento.Imagen</td>
                                    <td>
                                        <!-- Acciones de editar y eliminar -->
