    </script>



    <!--Cancelar citas-->

        <script>
        $(document).ready(function () {
            $('#cancelAppointmentButton input[type="submit"]').on('click', function (event) {
                event.preventDefault();

                var selectedIds = []; // Array para almacenar los IDs de las solicitudes seleccionadas

                $('input[name="options[]"]:checked').each(function () {
                    selectedIds.push($(this).val());
                });

                var formData = new FormData();
                for (var i = 0; i < selectedIds.length; i++) {
                    formData.append('ids', selectedIds[i]);
                }

                $.ajax({
                    url: '/Client/CancelarCita',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (data) {
                        console.log('Solicitudes canceladas con éxito');
                        // Eliminar visualmente las filas canceladas de la tabla
                        $.each(selectedIds, function (index, id) {
                            $('#checkboxSolicitud' + id).closest('tr').remove();
                        });

                        $('#btnCancelar').trigger('click');
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        console.log(textStatus, errorThrown);
                    }
                });
            });
        });
    </script>



