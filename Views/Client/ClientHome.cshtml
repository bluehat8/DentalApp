            document.getElementById('home-panel').classList.remove('d-none');
            document.getElementById('edit-profile').classList.add('d-none');
        });


        function hideAllAndShowOne(showId) {
            var allPanels = ['main-content', 'home-panel', 'edit-profile', 'notificaciones'];

            allPanels.forEach(function (panelId) {
                $('#' + panelId).addClass('d-none');
            });

            $('#' + showId).removeClass('d-none');
        }

        $('#editProfileLink').click(function () {
            hideAllAndShowOne('edit-profile');

        });

        $('#citas-btn').click(function () {
            hideAllAndShowOne('main-content');
        });

        $('#dashboard-btn').click(function () {
            hideAllAndShowOne('home-panel');
        });

        $('#btn-notificaciones').click(function () {
            hideAllAndShowOne('notificaciones');
        });



        
    </script>

     <script>
            $(document).ready(function () {
