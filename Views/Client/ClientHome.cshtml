                                            <label>Tipo de cita</label>
                                            <input name="TipoCita" class="form-control" required>
                                        </div>
                                        <div class="form-group">
                                            <label>Motivo</label>
                                            <input  name="MotivoCita" class="form-control" required>
                                        </div>

                                     </div>

                                    <div class="modal-footer">

