                    var fecha = $(this).data('fecha');
                    var hora = $(this).data('hora');
                    var estado = $(this).data('estado');
                    var motivo = $(this).data('motivo');
                    var tipocita =$(this).data('tipocita')

                    // Lógica para establecer los datos en el modal de edición
                    $('#editAppointmentModal #solicitudId').val(solicitudId);
                    $('#editAppointmentModal #fecha').val(fecha);
                    $('#editAppointmentModal #hora').val(hora);
                    $('#editAppointmentModal #estado').val(estado);
                    $('#editAppointmentModal #motivo').val(motivo);
                    $('#editAppointmentModal #tipocita').val(tipocita);

                });

                $('.delete').on('click', function () {
                    var solicitudId = $(this).data('id');
                    var fecha = $(this).data('fecha');
                    var hora = $(this).data('hora');
                    var estado = $(this).data('estado');
                    var motivo = $(this).data('motivo');

                    // Lógica para establecer los datos en el modal de eliminación
                    $('#deleteAppointmentModal #solicitudId').val(solicitudId);
                    $('#deleteAppointmentModal #fecha').val(fecha);
                    $('#deleteAppointmentModal #hora').val(hora);
                    $('#deleteAppointmentModal #estado').val(estado);
                    $('#deleteAppointmentModal #motivo').val(motivo);
                });
            });
     </script>

    <script>
        $(document).ready(function () {
            $('.delete').on('click', function () {
