    <script>
        $(document).ready(function () {
            $('.aceptarSolicitud').on('click', function (event) {

                var formData = new FormData();
                formData.append('idsolicitud', $(this).data('solicitud'));

                $.ajax({
                    url: '/Asistente/AceptarCita',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (data) {
                        console.log('Solicitud aprobada con éxito');
                        location.reload();

                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        console.log(textStatus, errorThrown);
                    }
                });
            });
        });
    </script>


