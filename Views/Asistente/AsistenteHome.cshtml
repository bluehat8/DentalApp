            <!-- Formulario de edición del perfil -->
            <div id="edit-profile" class="mt-5 d-none">
                <h2 class="text-center">Información de perfil</h2>

                <button id="enableEdit" class="ml-2 mb-2 btn btn-secondary">Habilitar Edición</button>

                <form id="editProfileForm" asp-action="ActualizarUsuario" asp-controller="Asistente">
                    <div class="card card-body mb-3">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="editFirstName" class="form-label">Nombres:</label>
                                <input type="text" value="@Model.Usuario.Nombre" class="form-control prof-inputs text-capitalize" id="editFirstName" asp-for="Usuario.Nombre" disabled required>
                            </div>
                            <div class="col-md-6">
                                <label for="editLastName" class="form-label">Apellidos:</label>
                                <input type="text" value="@Model.Usuario.Apellidos" class="form-control prof-inputs text-capitalize" id="editLastName" asp-for="Usuario.Apellidos" disabled required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label for="editBirthdate" class="form-label">Fecha de nacimiento:</label>
                                <input type="date" value="@Model.Usuario.FechaNacimiento" class="form-control prof-inputs" id="editBirthdate" asp-for="Usuario.FechaNacimiento" disabled required>
                            </div>
                            <div class="col-md-6">
                                <label for="editEmail" class="form-label">Email:</label>
                                <input type="email" value="@Model.Usuario.Correo" class="form-control prof-inputs" id="editEmail" asp-for="Usuario.Correo" disabled required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label for="editPhone" class="form-label">Teléfono:</label>
                                <input type="tel" value="@Model.Usuario.Telefono" class="form-control prof-inputs" id="editPhone" asp-for="Usuario.Telefono" disabled>
                            </div>

                            <div class="col-md-6">
                                <label for="editDNI" class="form-label">Cédula:</label>
                                <input type="tel" value="@Model.Usuario.Cedula" class="form-control prof-inputs" id="editDNI" asp-for="Usuario.Cedula" disabled>
                            </div>
                        </div>
                        <div class="d-grid mt-3">
                            <button id="saveProfileChanges" class="btn btn-primary prof-inputs" type="submit" name="Save">Save Changes</button>
                        </div>
                    </div>
                </form>
            </div>


            <!-- Gestionar Citas -->

            <div id="GestionarCitas" class="container mt-4 d-none">
                <h2>Panel para Aceptar/Cancelar Citas</h2>
                <div class="row">
                    <div class="col">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        <span class="custom-checkbox">
                                            <input type="checkbox" id="selectAll">
                                            <label for="selectAll"></label>
                                        </span>
                                    </th>
                                    <th class="w-auto">ID</th>
                                    <th class="w-auto">User ID</th>
                                    <th class="w-auto">Cliente</th>
                                    <th class="w-auto">Fecha</th>
                                    <th class="w-auto">Motivo</th>
                                    <th class="w-auto">Tipo Cita</th>
                                    <th class="w-auto">Estado</th>
                                    <th class="w-auto">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                            
                               @foreach (var solicitud in Model.solicitudes)
                                {
                                    <tr>
                                    <td>
                                        <span class="custom-checkbox">
                                        <input type="checkbox" id="checkbox@(solicitud.Id)" name="options[]" value="@(solicitud.Id)">
                                        <label for="checkbox@(solicitud.Id)"></label>
                                        </span>
                                    </td>
                                        <td>@solicitud.Id</td>
                                        <td>@solicitud.Userid</td>
                                        <td>@solicitud.NombrePaciente @solicitud.ApellidoPaciente</td>
                                        <td>@solicitud.Fecha.ToString("yyyy-MM-dd HH:mm")</td>
                                        <td>@solicitud.MotivoCita</td>
                                        <td>@solicitud.TipoCita</td>
                                        <td>@solicitud.EstadoValue</td>

                                    <td>
                                            <!-- Botones de acción por cada registro -->
                                            <button type="button" id="aceptarSolicitud" data-solicitud="@solicitud.Id" class="btn btn-success btn-sm aceptarSolicitud">Aceptar</button>
                                            <button type="button" class="btn btn-warning btn-sm">Modificar</button>
                                            <button type="button" class="btn btn-danger btn-sm cancelarSolicitud" data-solicitud="@solicitud.Id">Cancelar</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- Elementos debajo de los botones -->
                        <div class="row">
                            <div class="col">
                                <button type="button" id="NuevaCitabtn" class="btn btn-primary">Nueva Cita</button>
                                <button type="button" class="btn btn-secondary">Citas de Paciente Específico</button>
                            </div>
                            <div class="col">
                                <select class="form-select">
                                    <option value="">Filtrar por Fecha</option>
                                    <!-- Opciones de filtrado por fecha -->
                                </select>
                                <select class="form-select">
                                    <option value="">Filtrar por Estado</option>
                                    <!-- Opciones de filtrado por estado -->
                                </select>
                                <button type="button" class="btn btn-info">Filtrar</button>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col">
                                <p>Datos de Cita</p>
                                <p>Estado</p>
                                <button type="button" class="btn btn-primary">Acciones</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

